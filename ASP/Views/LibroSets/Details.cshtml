@model ASP.ViewModels.LibrosClass

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>LibroSet</h4>
    <hr />
	<div class="row">
		<div class="col-4">
			<img src=data:image/png;base64,@System.Convert.ToBase64String(Model.Libro.Imagen) />
		</div>
		<div class="col-8">
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Libro.Titulo)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Libro.Titulo)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Libro.AutorAutor)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Libro.AutorAutor.Apellidos), @Html.DisplayFor(model => model.Libro.AutorAutor.Nombre)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Libro.GeneroGenero)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Libro.GeneroGenero.Descripcion)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Libro.ClasificacionClasificacion)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Libro.ClasificacionClasificacion.Descripcion)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Libro.Descripcion)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Libro.Descripcion)
				</dd>
				</div>
			</dl>
		</div>
</div>

<div class="row mt-5">
<table class="table">
	<p>Otros libros de @Html.DisplayNameFor(model => model.Libro.AutorAutor)</p>
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Libro.Imagen)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Libro.Titulo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Libro.Descripcion)
			</th>
			
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.LibroSet)
		{
			<tr>
				<td>
					<img src=data:image/png;base64,@System.Convert.ToBase64String(item.Imagen) width="60" height="100" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Titulo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DescripcionCorta)
				</td>
			</tr>
		}
	</tbody>
	</table>
</div>


